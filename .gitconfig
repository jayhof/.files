[user]
	name = Johannes Hofmann
	email = johannes_hofmann@me.com
[push]
	default = current
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = auto
[color "branch"]
	current = green bold
	local = green
	remote = red bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red
[color "sh"]
	branch = yellow
[branch "master"]
	mergeoptions = --no-ff
[diff]
	tool = vimdiff
[alias]
	graph = log --graph --abbrev-commit --pretty=format:'%C(yellow)%h%Creset%C(blue)%d%Creset %s %C(green)<%an>%Creset %C(blue)%ci%Creset'

	#reset
	unstage = reset HEAD
	uncommit = reset --soft HEAD^
